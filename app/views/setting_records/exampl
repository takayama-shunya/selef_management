<%= form_with(model:[comment, record], url:choose_action_type, remote:true, class:"form-group") do |f| %>
  <% if comment.errors.any? %>
    <div class="error_explanation">
      <h3><%= comment.errors.count %><%= t('view.there_are_errors') %></h3>
      <ul>
      <% comment.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="">
    <div class="">
      <%= f.label :content, class:"" %>
      <%= f.text_area :content, value:comment.content, class:"form-control" %>
    <% end %>
      <%= f.submit nil, class:"btn btn-primary" %>
    </div>
  </div>

<% end %>
